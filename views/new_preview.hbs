<form action="/restaurants" method="POST">
  <input type="hidden" name="name" value="{{previewInfo.name}}">
  <input type="hidden" name="name_en" value="{{previewInfo.name_en}}">
  <input type="hidden" name="category" value="{{previewInfo.category}}">
  <input type="hidden" name="image" value="{{previewInfo.image}}">
  <input type="hidden" name="location" value="{{previewInfo.location}}">
  <input type="hidden" name="phone" value="{{previewInfo.phone}}">
  <input type="hidden" name="google_map" value="{{previewInfo.google_map}}">
  <input type="hidden" name="rating" value="{{previewInfo.rating}}">
  <input type="hidden" name="description" value="{{previewInfo.description}}">
  <div class="container mt-5">
    <a href="#" onclick="history.go(-1)"><button type="button" class="btn btn-warning">返回新增</button></a>
    <button type="submit" class="btn btn-primary" onclick="return confirm('確定新增此筆資料？')">送出</button>
  </div>
</form>

<h1 class="mb-1 restaurant-show-title">{{previewInfo.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2 fa-2x"></i>
          類別：
        </span>
        {{previewInfo.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2 fa-2x"></i>
          地址：
        </span>
        {{previewInfo.location}}
        <a href="{{previewInfo.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-2x"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2 fa-2x"></i>
          電話：
        </span>
        {{previewInfo.phone}}
      </p>

      <p class="mb-5">
        {{previewInfo.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{previewInfo.image}}" alt="{{previewInfo.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>